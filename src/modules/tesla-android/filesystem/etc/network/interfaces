source-directory /etc/network/interfaces.d

auto eth0
allow-hotplug eth0
iface eth0 inet manual

auto wlan0
allow-hotplug wlan0
iface wlan0 inet manual

auto eth1
allow-hotplug eth1
iface eth1 inet dhcp

auto br0
iface br0 inet static
	address 3.3.3.1
	netmask 255.255.255.0
	bridge_ports eth0 wlan0
	bridge_fd 0
	bridge_stp off
